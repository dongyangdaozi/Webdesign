<%- include header %>
	<div class="text-center page-title">用户登录</div>
	<div class="container">
		<div class="row">
			<div class="col-xs-4 col-xs-offset-4">
				<form method="post">
					<div class="form-group">
						<input type="text" class="form-control" name="username" placeholder="<% if(flag==1){ %>
							   该用户不存在<% }else{ %>用户名<% } %>">
					</div>
					<div class="form-group">
						<input type="password" class="form-control" name="password" placeholder="<% if(flag==2){ %>
							   密码错误<% }else{ %>密码<% } %>">
					</div>
					<button type="submit" class="btn btn-default center-block">登录</button>
				</form>
			</div>
		</div>
	</div>
<%- include footer %>