<%- include header %>
	<div class="text-center page-title">新用户注册</div>
	<div class="container">
		<div class="row">
			<div class="col-xs-4 col-xs-offset-4">
				<form method="post">
					<div class="form-group">
						<input type="text" class="form-control" name="username" placeholder="<% if(usertip==1){ %>
						请输入正确格式的用户名<% }else{ %>用户名<% } %>"  >
					</div>
					<div class="form-group">
						<input type="password" class="form-control" name="password" placeholder="<% if(usertip==2){ %>
						请输入正确格式的密码<% }else{ %>密码<% } %>">
					</div>
					<div class="form-group">
						<input type="password" class="form-control" name="passwordRepeat" placeholder="确认密码">
					</div>
					<button type="submit" class="btn btn-default center-block">注册</button>
				</form>
			</div>
		</div>
	</div>

<%- include footer %>